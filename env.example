# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
# For local MongoDB (no authentication)
MONGODB_URI=mongodb://localhost:27017/prepai
# For MongoDB Atlas (cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/prepai?retryWrites=true&w=majority
MONGODB_TEST_URI=mongodb://localhost:27017/prepai-test

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Configuration (Generate strong secrets in production)
# For development, these are sufficient (minimum 32 characters)
JWT_SECRET=prepai-development-jwt-secret-key-min-32-chars
JWT_REFRESH_SECRET=prepai-development-refresh-secret-key-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OAuth2 Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=prepai-assets

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@prepai.com
EMAIL_FROM_NAME=PrepAI

# AI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,video/mp4

# CORS Configuration (Allow frontend on port 5173 - Vite default)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:5174
CORS_CREDENTIALS=true

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=prepai-development-session-secret-key-min-32-chars

# Frontend URL (Vite default port is 5173)
FRONTEND_URL=http://localhost:5173

# Redis Configuration (Optional in development)
# Set REDIS_ENABLED=true to enable Redis
REDIS_ENABLED=false
